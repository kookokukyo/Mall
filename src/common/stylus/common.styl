
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

cp(x)
  (x/2)px

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

overDots()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  word-wrap: break-word
  word-break: break-all